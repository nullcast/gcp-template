{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "declaration": false,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2018",
    "lib": ["es2018"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../domain",
    "../lib/gcp",
    "../utility"
  ],
  "exclude": [
    "**/node_modules/*"
  ]
}
